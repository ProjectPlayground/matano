<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.EventActivity"
    tools:showIn="@layout/activity_event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnShareFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:onClick="startEventShareFacebook"
            android:text="Partager"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imbPhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_mini"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:onClick="startEventPhoto"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@mipmap/ic_photo"
                android:tint="@color/colorPrimary" />

            <ImageButton
                android:id="@+id/imbVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_mini"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:onClick="startEventVideo"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@mipmap/ic_video"
                android:tint="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtJour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mini"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/txtHoraire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mini"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/txtLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mini"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/txtTarif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mini"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mini"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPresentation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_horizontal_margin" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

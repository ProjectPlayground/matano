<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.apkode.matano.activity.ParticipantActivity"
    tools:showIn="@layout/activity_participant"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_mini"
            android:layout_marginTop="@dimen/activity_mini"
            android:layout_marginBottom="@dimen/activity_mini"
            android:layout_marginLeft="@dimen/activity_mini"
            android:layout_marginRight="@dimen/activity_mini">

            <LinearLayout
                android:background="@drawable/button2"
                android:padding="@dimen/activity_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imvImageCommentaire"
                    android:layout_gravity="center_vertical"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@mipmap/person" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">
                <TextView
                    android:id="@+id/txtNomCommentaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bachir"
                    android:layout_marginBottom="@dimen/activity_micro"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/txtPrenomCommentaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selan Zion" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button3"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_mini">

                <ImageView
                    android:layout_marginRight="@dimen/activity_mini"
                    android:background="@drawable/button2"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_action_assignment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_micro"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button3"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_mini">

                <ImageView
                    android:layout_marginRight="@dimen/activity_mini"
                    android:background="@drawable/button2"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_communication_message"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_micro"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CENTRE D'INTÉRÊT"
                android:textColor="@android:color/black"
                android:paddingTop="@dimen/activity_mini"
                android:paddingBottom="@dimen/activity_mini"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

               </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_mini">


            <Button
                android:layout_marginRight="@dimen/activity_mini"
                android:background="@drawable/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Envoyer"/>

            <EditText
                style="@style/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lui écrire ..."
                android:inputType="text|textCapSentences" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
